<% include ../partials/boilerplate %>

	<a href='/food/add' class='back'>
		<i class="fa fa-chevron-left" aria-hidden="true"></i>
	</a>


	<h1>Add Item</h1>

			<form method='POST' action='/food' class='search'>
				<input name='time' type='time' placeholder='time' required />

				<input name='name' type='text' value='<%=name%>' required />
				<input name='cals' type='number' value='<%=cals%>' required />
				<input name='details' type='text' value='<%=details%>' />

				<input type='submit' value='add' class='button'/>
			</form>


	<div class='cancel'>
	<a href='/food' id='cancel'>Cancel</a>
	</div>

<% include ../partials/end %>